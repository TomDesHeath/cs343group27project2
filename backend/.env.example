# Server Configuration
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example for Neon: postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/quizdb?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/quizdb?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Configuration
# For dev you can leave '*' to allow any origin; set your FE origin in prod
CORS_ORIGIN=http://localhost:5173

# Optional: Email Service (for bonus features)
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@quizapp.com


