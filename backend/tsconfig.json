{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
